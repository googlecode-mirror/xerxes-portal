<?xml version="1.0" encoding="utf-8"?>
<xerxes version="2.0">
		 
	<commands>
			
		<default>
			<section>databases</section>
			<action>categories</action>
		</default>
		
		
		<global>
			<contoller class="Global" method="navbar" />
			<contoller class="Global" method="authenticationCheck" />
		</global>
		
		<formats>
			<format name="local-format-name" header="Content-type: text/plain" />		
		</formats>
	
		<section name="databases">			
			<action name="subject">
				<pathParamMap>
					<mapEntry pathIndex="2" property="subject"/>
				</pathParamMap>
			</action>
			<action name="subject-opensearch">
				<request name="format">xml</request>
				<pathParamMap>
					<mapEntry pathIndex="2" property="subject"/>
				</pathParamMap>
			</action>
			<action name="proxy">
				<pathParamMap>
					<mapEntry pathIndex="2" property="database"/>
				</pathParamMap>
			</action>
		</section>
		
		<section name="embed">
			<action name="gen_subject">
				<pathParamMap>
					<mapEntry pathIndex="2" property="subject"/>
				</pathParamMap>
			</action>
			<action name="gen_database">
				<request name="gen_full_urls">true</request>
				<pathParamMap>
					<mapEntry pathIndex="2" property="id"/>
				</pathParamMap>
			</action>
			<action name="subject">
				<pathParamMap>
					<mapEntry pathIndex="2" property="subject"/>
				</pathParamMap>
			</action>
			<action name="database">
				<pathParamMap>
					<mapEntry pathIndex="2" property="id" />
				</pathParamMap>
			</action>	
		</section>
		
		<section name="folder">
			<pathParamMap>
				<mapEntry pathIndex="2" property="username"/>
			</pathParamMap>
			<action name="full">
				<pathParamMap>
					<mapEntry pathIndex="3" property="record" />
				</pathParamMap>			
			</action>
			<action name="export">
				<command>FolderResults</command>
				<view format="text-file">xsl/citation/basic.xsl</view>
				<view format="ris-file">xsl/citation/ris.xsl</view>
				<view format="bibliographic">xsl/citation/ris.xsl</view>
			</action>
		</section>
		
		<section name="collections" directory="collections">
			<pathParamMap>
				<mapEntry pathIndex="2" property="username" />
				<mapEntry pathIndex="3" property="subject"/>
			</pathParamMap>			
		</section>
	
		<section name="helper" namespace="Xerxes" directory="helper">
			<action name="labels.js">
				<contoller class="Global" method="Labels" />
			</action>
		</section>

	</commands>
</xerxes>
