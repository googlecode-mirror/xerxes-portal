# block access to config files

<FilesMatch "\.xml">

	Order allow,deny
	Deny from all

</FilesMatch>

# pretty urls

<IfModule rewrite_module>
	
	RewriteEngine On
	RewriteCond %{REQUEST_FILENAME} -s [OR]
	RewriteCond %{REQUEST_FILENAME} -l [OR]
	RewriteCond %{REQUEST_FILENAME} -d
	RewriteRule ^.*$ - [NC,L]
	RewriteRule ^.*$ index.php [NC,L]
	
</IfModule>